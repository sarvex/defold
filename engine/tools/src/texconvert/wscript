#! /usr/bin/env python
import os
import waflib.Options

def configure(conf):
    pass

def build(bld):
    # if not desktop
    if bld.env.PLATFORM not in (
        'x86_64-win32',
        'x86_64-macos',
        'x86_64-linux',
    ):
        return

    b = bld.program(features         = 'c cprogram cxx',
                    use              = 'DLIB TEXC PROFILE_NULL BASIS_ENCODER',
                    source           = 'main.cpp',
                    target           = 'texconvert')

